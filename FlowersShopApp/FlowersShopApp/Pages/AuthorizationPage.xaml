<Page x:Class="FlowersShopApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlowersShopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" Background="Pink">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">

            <Image RenderOptions.BitmapScalingMode="HighQuality" Margin="5" Source="../Resources/logo_new.png"/>

            <TextBlock Text="Login" TextAlignment="Center"/>
            <TextBox x:Name="TBLogin" Margin="5"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <PasswordBox x:Name="PBPassword" Margin="5"/>
            <Button x:Name="BAuthorize" Click="BAuthorize_Click" Margin="5" Content="Authorize"/>
            <Button x:Name="BRegistration" Click="BRegistration_Click" Margin="5" Content="Registration"/>
        </StackPanel>
    </Grid>
</Page>
