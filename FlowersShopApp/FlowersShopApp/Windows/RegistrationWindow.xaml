<Window x:Class="FlowersShopApp.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowersShopApp.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="289" Width="306" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel  VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" Text="Login"/>
            <TextBox x:Name="TBLogin" Margin="5"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <TextBox x:Name="TBPassword" Margin="5"/>
            <TextBlock Text="Confirm Password" TextAlignment="Center"/>
            <TextBox x:Name="TBPasswordConfirm" Margin="5"/>
            <Button x:Name="BRegistration" Click="BRegistration_Click" Content="Registration" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
